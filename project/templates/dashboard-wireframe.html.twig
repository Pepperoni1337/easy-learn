{% extends 'base.html.twig' %}

{% block title %}{{ 'page.dashboard.title'|trans }}{% endblock %}

{% block body %}

{{ 'page.dashboard.welcome'|trans }} {{ user.nickname }}!<br><br>

    <a href="#">
        {{ 'page.dashboard.createNewQuiz'|trans }}
    </a><br><br>


{{ 'page.dashboard.discoverQuizzes'|trans }}<br><br>

    {% for quiz in availableQuizzes %}
        {{ quiz.title }}<br>
        {{ quiz.description }}<br>
        {{ 'page.dashboard.quiz.numberOfQuestions'|trans }}: {{ quiz.numberOfQuestions }}<br>
        {{ 'page.dashboard.quiz.shareLink'|trans }}<br>
        <a href="{{ path('app_quiz_session_start', {quiz: quiz.id}) }}">
            {{ 'page.dashboard.startQuiz'|trans }}
        </a> <br><br>
        <a href="{{ path('app_quiz_detail', {quiz: quiz.id}) }}">
            {{ 'page.dashboard.quiz.detailLink'|trans }}
        </a> <br><br>

    {% endfor %}<br>

{{ 'page.dashboard.quizSessionsInProgress'|trans }}<br><br>

    {% for quizSession in quizSessionsInProgress %}
        {% set quiz = quizSession.quiz %}
        {{ quiz.title }}<br>
        - {{ quiz.description }}<br>
        level {{ quizSession.currentLevelNumber }} / {{ quizSession.numberOfLevelsAtStart }}
        <a href="{{ path('app_quiz_session_get_question', {quizSession: quizSession.id}) }}">
            {{ 'page.dashboard.quizSession.continueLink'|trans }}
        </a> <br><br>
    {% endfor %}<br>

{{ 'page.dashboard.finishedQuizSessions'|trans }}<br><br>

    {% for quiz in finishedQuizSessions %}
        {{ quiz.title }}<br>
        - {{ quiz.description }}<br>
        <a href="#">
            {{ 'page.dashboard.startQuiz'|trans }}
        </a> <br><br>
    {% endfor %}<br>

{% endblock %}
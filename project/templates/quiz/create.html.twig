{% extends 'base.html.twig' %}

{% block title %}Create New Quiz{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Create New Quiz</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.name) }}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.prompt) }}
                        {{ form_widget(form.prompt, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.prompt) }}
                        <small class="form-text text-muted">
                            Enter a topic or prompt for generating questions.
                        </small>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-plus-circle me-2"></i>Create Quiz
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}{{ quiz.title }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">{{ quiz.title }}</h2>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h5 class="text-muted mb-3">Description</h5>
                        <p class="lead">{{ quiz.description }}</p>
                    </div>

                    <div class="mb-4">
                        <h5 class="text-muted mb-3">Quiz Details</h5>
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-question-circle me-2 text-primary"></i>
                            <span>{{ 'page.quiz.detail.quiz.numberOfQuestions'|trans }}: <strong>{{ quiz.numberOfQuestions }}</strong></span>
                        </div>

                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-question-circle me-2 text-primary"></i>
                            <span>{{ 'page.quiz.detail.quiz.rating'|trans }}: <strong>{{ quiz.avgRating }}</strong></span>
                        </div>

                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-question-circle me-2 text-primary"></i>
                            <span>{{ 'page.quiz.detail.quiz.author'|trans }}: <strong>{{ quiz.createdBy.nickname }}</strong></span>
                        </div>

                        <div class="d-flex align-items-center">
                            <i class="bi bi-share me-2 text-primary"></i>
                            <span>{{ 'page.quiz.detail.quiz.shareLink'|trans }}</span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5 class="text-muted mb-3">{{ 'quiz.finished_question'|trans }}</h5>
                        {% if bestResults|length > 0 %}
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>{{ 'label.user'|trans|default('User') }}</th>
                                            <th>{{ 'label.score'|trans }}</th>
                                            <th>{{ 'page.getQuestion.time'|trans|default('Time') }}</th>
                                            <th>{{ 'page.getQuestion.numberOfCorrectAnswers'|trans }}</th>
                                            <th>{{ 'page.getQuestion.numberOfWrongAnswers'|trans }}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for result in bestResults %}
                                            <tr>
                                                <td>{{ loop.index }}</td>
                                                <td>{{ result.player.nickname }}</td>
                                                <td>{{ result.totalScore }}</td>
                                                <td>{{ result.totalTime|number_format(2) }}s</td>
                                                <td>{{ result.numberOfCorrectAnswers }}</td>
                                                <td>{{ result.numberOfWrongAnswers }}</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <p>{{ 'message.no_results'|trans|default('No results yet. Be the first to play this quiz!') }}</p>
                        {% endif %}
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <a href="{{ path('app_quiz_session_start', {quiz: quiz.id, style: 'simple'}) }}" class="btn btn-success btn-lg">
                        <i class="bi bi-play-fill me-2"></i>{{ 'page.dashboard.startQuizSimple'|trans }}
                    </a>
                    <a href="{{ path('app_quiz_session_start', {quiz: quiz.id, style: 'snowball'}) }}" class="btn btn-success btn-lg">
                        <i class="bi bi-play-fill me-2"></i>{{ 'page.dashboard.startQuiz'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

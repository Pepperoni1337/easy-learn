{% extends 'base.html.twig' %}

{% block title %}Quizzes{% endblock %}

{% block body %}
    <div class="container">
        <h1>Available Quizzes</h1>

        {% if quizzes is empty %}
            <p>No quizzes available at the moment.</p>
        {% else %}
            <div class="row">
                {% for quiz in quizzes %}
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ quiz.title }}</h5>
                                <p class="card-text">{{ quiz.description }}</p>
                                <p class="card-text"><small class="text-muted">Questions: {{ quiz.questions|length }}</small></p>
                                <a href="{{ path('app_quiz_session_start', {'quiz': quiz.id}) }}" class="btn btn-primary">Start Quiz</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <h2 class="mt-5">Your Quiz Sessions</h2>

        {% if quizSessions is empty %}
            <p>You don't have any active quiz sessions.</p>
        {% else %}
            <div class="row">
                {% for session in quizSessions %}
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ session.quiz.title }}</h5>
                                <p class="card-text">
                                    Status: 
                                    {% if session.status.value == 'in_progress' %}
                                        <span class="badge bg-warning">In Progress</span>
                                    {% else %}
                                        <span class="badge bg-success">Finished</span>
                                    {% endif %}
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        Answered: {{ session.answeredQuestions|length }} / {{ session.quiz.questions|length }}
                                    </small>
                                </p>
                                {% if session.status.value == 'in_progress' %}
                                    <a href="{{ path('app_quiz_session_get_question', {'quizSession': session.id}) }}" class="btn btn-success">Continue Quiz</a>
                                {% else %}
                                    <button class="btn btn-secondary" disabled>Completed</button>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

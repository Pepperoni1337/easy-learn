{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    <h1>Register</h1>

    {% for flash_error in app.flashes('error') %}
        <div class="alert alert-danger">{{ flash_error }}</div>
    {% endfor %}

    <form method="post">
        <div class="mb-3">
            <label for="inputEmail">Email</label>
            <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div class="mb-3">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="new-password" required>
        </div>

        <button class="btn btn-primary" type="submit">
            Register
        </button>
    </form>
    
    <div class="mt-3">
        <p>Already have an account? <a href="{{ path('app_login') }}">Login here</a></p>
    </div>
</div>
{% endblock %}
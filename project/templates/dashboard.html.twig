{% extends 'base.html.twig' %}

{% block title %}{{ 'page.dashboard.title'|trans }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="alert alert-success mb-4">
            <h4 class="mb-0">
                <i class="bi bi-person-circle me-2"></i>
                {{ 'page.dashboard.welcome'|trans }} {{ user.nickname }}!
            </h4>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12 text-center">
        <a href="{{ path('app_quiz_create') }}" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle me-2"></i>
            {{ 'page.dashboard.createNewQuiz'|trans }}
        </a>
    </div>
</div>

<!-- My Quizzes Section -->
<div class="row">
    <div class="col-md-6 col-lg-4">
        <h2 class="section-header">
            <i class="bi bi-collection me-2"></i>
            {{ 'page.dashboard.myQuizzes'|trans }}
        </h2>

        {% for quiz in myQuizzes %}
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">{{ quiz.title }}</h5>
                <p class="card-text">{{ quiz.description }}</p>
                <p class="card-text">
                    <small class="text-muted">
                        <i class="bi bi-question-circle me-1"></i>
                        {{ 'page.dashboard.quiz.numberOfQuestions'|trans }}: {{ quiz.numberOfQuestions }}
                    </small>
                </p>
            </div>
            <div class="card-footer bg-transparent">
                <div class="d-flex justify-content-between flex-wrap">
                    <a href="{{ path('app_quiz_session_start', {'quiz': quiz.id, 'style': 'simple'}) }}" class="btn btn-outline-primary btn-sm mb-1">
                        <i class="bi bi-play-circle me-1"></i>
                        {{ 'page.dashboard.startQuizSimple'|trans }}
                    </a>
                    <a href="{{ path('app_quiz_session_start', {'quiz': quiz.id, 'style': 'snowball'}) }}" class="btn btn-primary btn-sm mb-1">
                        <i class="bi bi-snow me-1"></i>
                        {{ 'page.dashboard.startQuiz'|trans }}
                    </a>
                    <a href="{{ path('app_quiz_detail', {quiz: quiz.id}) }}" class="btn btn-outline-secondary btn-sm mb-1">
                        <i class="bi bi-info-circle me-1"></i>
                        {{ 'page.dashboard.quiz.detailLink'|trans }}
                    </a>
                </div>
                <div class="mt-2">
                    <small class="text-muted">
                        <i class="bi bi-share me-1"></i>
                        {{ 'page.dashboard.quiz.shareLink'|trans }}
                    </small>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

<!-- Most Played Quizzes Section -->
    <div class="col-md-6 col-lg-4">
        <h2 class="section-header">
            <i class="bi bi-graph-up me-2"></i>
            {{ 'page.dashboard.mostPlayedQuizzes'|trans }}
        </h2>

        {% for quiz in mostPlayedQuizzes %}
        <div class="card mb-3">
            <div class="card-body">

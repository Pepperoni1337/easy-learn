{% extends 'base.html.twig' %}

{% block title %}{{ user.nickname }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">{{ user.nickname }}</h2>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h5 class="text-muted mb-3">User Details</h5>
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-envelope me-2 text-primary"></i>
                            <span>Email: <strong>{{ user.email }}</strong></span>
                        </div>
                        
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-person-badge me-2 text-primary"></i>
                            <span>Nickname: <strong>{{ user.nickname }}</strong></span>
                        </div>
                        
                        <div class="d-flex align-items-center">
                            <i class="bi bi-shield-check me-2 text-primary"></i>
                            <span>Roles: <strong>{{ user.roles|join(', ') }}</strong></span>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <h5 class="text-muted mb-3">Quiz History</h5>
                        {% if quizHistory is same as('test') %}
                            <p class="text-muted">No quiz history available yet.</p>
                        {% else %}
                            {# Display quiz history here when implemented #}
                            <ul class="list-group">
                                {% for quiz in quizHistory %}
                                    <li class="list-group-item">
                                        <a href="{{ path('app_quiz_detail', {quiz: quiz.id}) }}">{{ quiz.title }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                    
                    <div class="mb-4">
                        <h5 class="text-muted mb-3">Created Quizzes</h5>
                        {% if createdQuizzes is same as('test') %}
                            <p class="text-muted">No created quizzes available yet.</p>
                        {% else %}
                            {# Display created quizzes here when implemented #}
                            <ul class="list-group">
                                {% for quiz in createdQuizzes %}
                                    <li class="list-group-item">
                                        <a href="{{ path('app_quiz_detail', {quiz: quiz.id}) }}">{{ quiz.title }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <a href="{{ path('app_dashboard') }}" class="btn btn-primary">
                        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
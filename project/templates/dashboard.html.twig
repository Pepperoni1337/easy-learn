                        <i class="bi bi-share me-1"></i>
                        {{ 'page.dashboard.quiz.shareLink'|trans }}
                    </small>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

<!-- Best Rated Quizzes Section -->
    <div class="col-md-6 col-lg-4">
        <h2 class="section-header">
            <i class="bi bi-star me-2"></i>
            {{ 'page.dashboard.bestRatedQuizzes'|trans }}
        </h2>

        {% for quiz in bestRatedQuizzes %}
        <div class="card mb-3">

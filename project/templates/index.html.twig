{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} mt-3">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <h1>{{ 'section.available_quizzes'|trans }}</h1>

        {% if quizzes is empty %}
            <p>{{ 'message.no_quizzes'|trans }}</p>
        {% else %}
            <div class="row">
                {% for quiz in quizzes %}
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ quiz.title }}</h5>
                                <p class="card-text">{{ quiz.description }}</p>
                                <p class="card-text"><small class="text-muted">{{ 'label.questions'|trans }} {{ quiz.questions|length }}</small></p>
                                <div class="d-flex">
                                    <a href="{{ path('app_quiz_detail', {'quiz': quiz.id}) }}" class="btn btn-info me-2">{{ 'button.view_details'|trans }}</a>
                                    <a href="{{ path('app_quiz_session_start', {'quiz': quiz.id}) }}" class="btn btn-primary">{{ 'button.start_quiz'|trans }}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <h2 class="mt-5">{{ 'section.sessions_in_progress'|trans }}</h2>

        {% if sessionsInProgress is empty %}
            <p>{{ 'message.no_active_sessions'|trans }}</p>
        {% else %}
            <div class="row">
                {% for session in sessionsInProgress %}
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ session.quiz.title }}</h5>
                                <p class="card-text">
                                    {{ 'label.status'|trans }} <span class="badge bg-warning">{{ 'label.in_progress'|trans }}</span>
                                </p>
                                <p class="card-text">
                                </p>
                                <a href="{{ path('app_quiz_session_get_question', {'quizSession': session.id}) }}" class="btn btn-success">{{ 'button.continue_quiz'|trans }}</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <h2 class="mt-5">{{ 'section.finished_sessions'|trans }}</h2>

        {% if finishedSessions is empty %}
            <p>{{ 'message.no_finished_sessions'|trans }}</p>
        {% else %}
            <div class="row">
                {% for session in finishedSessions %}
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ session.quiz.title }}</h5>
                                <p class="card-text">
                                    {{ 'label.status'|trans }} <span class="badge bg-success">{{ 'label.finished'|trans }}</span>
                                </p>
                                <p class="card-text">
                                </p>
                                <button class="btn btn-secondary" disabled>{{ 'button.completed'|trans }}</button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

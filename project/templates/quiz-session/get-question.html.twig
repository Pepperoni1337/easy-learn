{% extends 'base.html.twig' %}

{% block title %}{{ 'quiz.question_title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <div>
                            {{ 'page.getQuestion.currentLevel'|trans }}: {{ quizSession.progress.currentLevel }} / {{ quizSession.numberOfLevelsAtStart }}
                        </div>
                        <div>
                            {{ 'page.getQuestion.numberOfAnsweredQuestions'|trans }}: {{ level.currentQuestionNumber - 1}} / {{ level.numberOfQuestionsAtStart }}
                        </div>
                        <div>
                            {{ 'page.getQuestion.numberOfCorrectAnswers'|trans }}: {{ quizSession.progress.numberOfCorrectAnswers }}
                        </div>
                        <div>
                            {{ 'page.getQuestion.numberOfWrongAnswers'|trans }}: {{ quizSession.progress.numberOfWrongAnswers }}
                        </div>
                        <div>
                            {{ 'page.getQuestion.score'|trans }}: {{ quizSession.progress.score }}
                        </div>
                        <div>
                            {{ 'page.getQuestion.currentStreak'|trans }}: {{ quizSession.progress.currentStreak }}
                        </div>
                        <div>
                            {{ 'page.getQuestion.maxStreak'|trans }}: {{ quizSession.progress.maxStreak }}
                        </div>
                    </div>

                    <div class="card-body">
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}

                        <h4 class="mb-4">{{ question.question }}</h4>

                        <form action="{{ path('app_quiz_session_answer_question', {'quizSession': quizSession.id, 'question': question.id}) }}" method="POST">
                            <div class="mb-3">
                                <label class="form-label">{{ 'label.your_answer'|trans }}</label>
                                <div class="d-grid gap-2">
                                    {% for answer in question.possibleAnswers %}
                                        <button type="submit" class="btn btn-outline-primary" name="answer" value="{{ answer }}">{{ answer }}</button>
                                    {% endfor %}
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

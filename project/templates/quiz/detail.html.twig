{% extends 'base.html.twig' %}

{% block title %}{{ quiz.title }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">{{ quiz.title }}</h2>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h5 class="text-muted mb-3">Description</h5>
                        <p class="lead">{{ quiz.description }}</p>
                    </div>
                    
                    <div class="mb-4">
                        <h5 class="text-muted mb-3">Quiz Details</h5>
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-question-circle me-2 text-primary"></i>
                            <span>{{ 'page.quiz.detail.quiz.numberOfQuestions'|trans }}: <strong>{{ quiz.numberOfQuestions }}</strong></span>
                        </div>
                        
                        <div class="d-flex align-items-center">
                            <i class="bi bi-share me-2 text-primary"></i>
                            <span>{{ 'page.quiz.detail.quiz.shareLink'|trans }}</span>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <a href="{{ path('app_quiz_session_start', {quiz: quiz.id}) }}" class="btn btn-success btn-lg">
                        <i class="bi bi-play-fill me-2"></i>{{ 'page.dashboard.startQuiz'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% set result = quizSession.result %}

{% block title %}{{ 'quiz.question_title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3>
                            {{ 'page.results.title'|trans({'%quiz%': quizSession.quiz.title})|default('Quiz Results') }}
                            kvízu
                            {{ quizSession.quiz.title }}
                        </h3>
                    </div>

                    <div class="card-body">
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}

                        <div class="mb-4">
                            <h4>Uživatel: {{ quizSession.player.nickname }}</h4>
                            <p>výsledky:</p><br>
                            <p>Skóre: {{ result.totalScore }}</p>
                            <p>Celkový čas: {{ result.totalTime }}</p>
                        </div>

                        <div class="mb-3">
                            <h5>Sdílet na FB:</h5>
                            <!-- Facebook sharing buttons can go here -->
                        </div>

                        <div class="mb-3">
                            <h5>pokud už ho člověk hrál:</h5>
                            <a href="{{ path('app_quiz_session_start', {quiz: quizSession.quiz.id, style: 'simple'}) }}" class="btn btn-primary">
                                Hrát znovu
                            </a>
                        </div>

                        <div class="mb-3">
                            <h5>else:</h5>
                            <p>Troufneš si taky na tento kvíz?</p>
                        </div>

                        <div class="mb-3">
                            <div class="mb-3">
                                <h5>pokud už ho člověk hrál:</h5>
                                <a href="{{ path('app_quiz_create') }}" class="btn btn-primary">
                                    Vytvoř si vlastní kvíz
                                </a>
                            </div>
                        </div>

                        <form action="{{ path('app_quiz_rate', {'quiz': quizSession.quiz.id}) }}" method="POST">
                            <label for="rating">Hodnotit kvíz:</label>
                            <select name="rating" class="form-select">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                            <button type="submit" class="btn btn-primary">Odeslat</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ 'quiz.detail_title'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} mt-3">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>{{ 'quiz.detail_heading'|trans }}</h1>
            <a href="{{ path('app_index') }}" class="btn btn-secondary">{{ 'button.return'|trans }}</a>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <h2 class="card-title">{{ quiz.title }}</h2>
                <p class="card-text">{{ quiz.description }}</p>
                <p class="card-text"><small class="text-muted">{{ 'label.questions'|trans }} {{ quiz.questions|length }}</small></p>

                <div class="d-flex mt-3">
                    <a href="{{ path('app_quiz_session_start', {'quiz': quiz.id}) }}" class="btn btn-primary me-2">{{ 'button.start_quiz'|trans }}</a>
                </div>
            </div>
        </div>

        <h2>{{ 'quiz.finished_question'|trans }}</h2>

        {% if finishedSessions is empty %}
            <p>{{ 'message.no_sessions'|trans }}</p>
        {% else %}
            <div class="list-group">
                {% for session in finishedSessions %}
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-1">{{ session.owner.email }}</h5>
                            <span class="badge {% if session.status.value == 'finished' %}bg-success{% else %}bg-primary{% endif %}">
                                {{ session.status.value|trans }}
                            </span>
                        </div>
                        <p class="mb-1">
                            <small class="text-muted">{{ 'label.created_at'|trans }}: {{ session.createdAt|date('Y-m-d H:i') }}</small>
                        </p>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <h2>{{ 'quiz.sessions_in_progress'|trans }}</h2>

        {% if sessionsInProgress is empty %}
            <p>{{ 'message.no_sessions'|trans }}</p>
        {% else %}
            <div class="list-group">
                {% for session in sessionsInProgress %}
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-1">{{ session.owner.email }}</h5>
                            <span class="badge {% if session.status.value == 'finished' %}bg-success{% else %}bg-primary{% endif %}">
                                {{ session.status.value|trans }}
                            </span>
                        </div>
                        <p class="mb-1">
                            <small class="text-muted">{{ 'label.created_at'|trans }}: {{ session.createdAt|date('Y-m-d H:i') }}</small>
                        </p>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
